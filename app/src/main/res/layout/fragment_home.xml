<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ailert_logo"
        android:contentDescription="Logo" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AILERT"
        android:textSize="38sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presiona para activar la detecciÃ³n"
        android:layout_marginTop="12dp"

        android:textSize="18sp" />

    <Button
        android:id="@+id/startServiceButton"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:textSize="25sp"
        android:background="@drawable/on"
        />

    <Button
        android:id="@+id/requestPermissionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dar permisos"
        android:padding="20dp"
        android:textSize="20sp"
        android:layout_marginTop="16dp"/>


    <TextView
        android:id="@+id/detection_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado: Inactivo"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
